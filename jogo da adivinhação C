#include <stdio.h>

int main() {
    
    printf("***************************************\n");
    printf("*Bem-vindo ao nosso jogo da advinhação*\n");
    printf("***************************************\n");
    
    int numeroSecreto = 42;
    
int chute;
printf ("Qual é o seu chute: \n");

scanf ("%d", &chute);
printf ("Seu chute foi %d \n", chute);

  if(chute==numeroSecreto){
        printf("Você acertou! \n");
  } else{
      printf("Você errou!\n");
    }
    
    return 0;
}
